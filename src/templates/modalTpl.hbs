<div class="modal">
  <div class="modal__wrapper">
    <button class="modal__btn-close js-btn-close" type="button" aria-label="Button close modal" data-model-close>
      <svg class="modal__icon-close" width="17" height="17">
        <use href="{{svg}}#icon-close"></use>
      </svg>
    </button>

    <div class="modal__container event-info">
      <div class="event-info__label">
        <img class="event-info__img" src={{posterUrl}} alt={{name}} />
      </div>
      <div class="event-info__content">
        <img class="event-info__poster" src={{posterUrl}} alt={{name}} />
        <div class="event-info__description">
          <h3 class="event-info__title">INFO</h3>
          <p class="event-info__text">{{description}}</p>
          <h3 class="event-info__title">WHEN</h3>
          <p class="event-info__text">{{dates.start.localDate}}</br>{{dates.start.localTime}} ({{dates.timezone}})</p>
          <h3 class="event-info__title">WHERE </h3>
          <p class="event-info__text">{{_embedded.venues.0.city.name}}, {{_embedded.venues.[0].country.name}}</br>{{_embedded.venues.[0].address.line1}}</p>
          <h3 class="event-info__title">WHO</h3>
          <p class="event-info__text">{{name}}</p>
          <h3 class="event-info__title">PRICES</h3>
          <ul>
            <li class="event-info__price-item">
              <div class="event-info__price">
                <svg class="event-info__icon-barcode" width="24" height="16">
                  <use href="{{svg}}#icon-barcode"></use>
                </svg>
                <p class="event-info__text">{{priceRanges.type}} {{priceRanges.[0].min}}-{{priceRanges.[0].max}}
                {{priceRanges.[0].currency}}</p>
              </div>
              <button class="event-info__btn">BUY TICKETS</button>
            </li>
            <li class="event-info__price-item">
              <div class="event-info__price">
                <svg class="event-info__icon-barcode" width="24" height="16">
                  <use href="{{svg}}#icon-barcode"></use>
                </svg>
                <p class="event-info__text">VIP 1000-1500 UAH</p>
              </div>
              <button class="event-info__btn">BUY TICKETS</button>
            </li>
          </ul>
        </div>
      </div>

      <a class="event-info__btn-more" href="#" aria-label="Button for more information">MORE FROM THIS AUTHOR</a>
    </div>
  </div>
</div>